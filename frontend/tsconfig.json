{
  "compilerOptions": {
    "target": "es2022",
    "lib": [
      "dom",
      "dom.iterable",
      "es2022"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react",
    "outDir": "dist",
    "sourceMap": true,
    "listEmittedFiles": true,
    "types": [
      "mocha",
      "chai",
      "node"
    ]
  },
  "ts-node": {
    "esm": true,
    "project": "tsconfig.json"
  },
  "include": [
    "src",
    "src/react-number-input.d.ts"
  ],
  "exclude": [
    "src/@components/noLongerUsed/*"
  ],
  "baseUrl": "./src",
  "paths": {
    "@interfaces/*": [
      "@interfaces/*"
    ],
    "classes/*": [
      "classes/*"
    ],
    "components/*": [
      "components/*"
    ]
  },
}